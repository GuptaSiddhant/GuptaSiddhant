{
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "cSpell.words": ["remixicon", "tailwindcss"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "yarn*, .eslintrc*, .git*, .yarnrc.*",
    "remix.config.js": "vercel.json, server.*, .babelrc*, .codecov, .cssnanorc*, .htmlnanorc*, .lighthouserc.*, .mocha*, .postcssrc*, .terserrc*, api-extractor.json, ava.config.*, babel.config.*, cssnano.config.*, cypress.json, env.d.ts, htmlnanorc.*, jasmine.*, jest.config.*, jsconfig.*, karma*, lighthouserc.*, playwright.config.*, postcss.config.*, puppeteer.config.*, remix.*, svgo.config.*, tsconfig.*, tsdoc.*, unocss.config.*, vitest.config.*, webpack.config.*, windi.config.*",
    ".env": ".env.*, *.env, .envrc",
    "tailwind.*": "tailwind*",
    "firebase.json": ".firebase*, firebase.*, firestore.*, storage.*, remoteconfig.*"
  },
  //
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.completeFunctionCalls": false,
  "typescript.suggest.completeFunctionCalls": false,
  // JSON Schemas
  "json.schemaDownload.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["**/education/index.json"],
      "url": "./.vscode/education.schema.json"
    },
    {
      "fileMatch": ["**/career/index.json"],
      "url": "./.vscode/career.schema.json"
    }
  ]
  // "deno.enable": false,
  // "deno.lint": true,
  // "deno.unstable": true,
  // "deno.enablePaths": ["./apps/website"],
  // "deno.importMap": "./.vscode/resolve_npm_imports.json"
}
