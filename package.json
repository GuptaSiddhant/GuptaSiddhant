{
  "name": "gs-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "features/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pi --topological-dev run build",
    "dev": "yarn workspaces foreach -pi run dev",
    "clear": "yarn workspaces foreach -pi run clear",
    "cli:build": "yarn workspace guptasiddhant build",
    "web:dev": "yarn workspace website dev",
    "web:build": "yarn workspace website build",
    "web:deploy": "flyctl deploy --remote-only ./apps/website"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "tailwindcss": "^3.0.0"
  }
}
