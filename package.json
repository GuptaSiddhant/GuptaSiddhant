{
  "name": "gs-monorepo",
  "private": true,
  "workspaces": [
    "cli"
  ],
  "scripts": {
    "cli:dev": "yarn workspaces guptasiddhant dev",
    "cli:build": "yarn workspace guptasiddhant build",
    "build": "run-s -l web:build:css web:build:remix",
    "web:build:css": "tailwindcss --minify -o ./app/packages/styles/tailwind.css",
    "web:build:remix": "remix build",
    "dev": "run-p web:dev:css web:dev:remix",
    "web:dev:css": "tailwindcss -w -o ./app/packages/styles/tailwind.css",
    "web:dev:remix": "remix dev",
    "clear": "yarn workspaces foreach -pi run clear",
    "preclear": "rm -rf api .cache build public/build",
    "fix": "eslint --fix --ext tsx,ts ./app "
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@remix-run/node": "^1.5.0",
    "@remix-run/react": "^1.5.0",
    "@remix-run/server-runtime": "^1.5.0",
    "@remix-run/vercel": "^1.5.0",
    "clsx": "^1.1.1",
    "lru-cache": "^7.10.1",
    "prism-react-renderer": "^1.3.3",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "remixicon-react": "^1.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.0",
    "@remix-run/eslint-config": "^1.5.0",
    "@remix-run/serve": "^1.5.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/eslint": "^8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/tailwindcss": "^2.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "firebase-admin": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.7.2"
  }
}
