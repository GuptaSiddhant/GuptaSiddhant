{
  "name": "gs-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "features/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "web:dev": "turbo run dev --filter=website",
    "cli:build": "turbo run build --filter=guptasiddhant",
    "cli:publish": "turbo run publish --filter=guptasiddhant"
  },
  "devDependencies": {
    "turbo": "^1.2.14"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  }
}
