{
  "name": "gs-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "cli:build": "yarn workspace guptasiddhant build",
    "cli:dev": "yarn workspace guptasiddhant dev",
    "cli:start": "yarn workspace guptasiddhant start",
    "functions:dev": "yarn workspace functions serve",
    "functions:deploy": "yarn workspace functions deploy",
    "build": "run-s -l web:build:css web:build:remix",
    "web:build:css": "tailwindcss --minify -o ./web/features/styles/tailwind.generated.css",
    "web:build:remix": "remix build",
    "dev": "run-p web:dev:css web:dev:remix",
    "web:dev:css": "tailwindcss -w -o ./web/features/styles/tailwind.generated.css",
    "web:dev:remix": "remix dev",
    "web:dev:remix:emulator": "FIRESTORE_EMULATOR_HOST=\"localhost:8080\" FIREBASE_STORAGE_EMULATOR_HOST=\"localhost:9199\" remix dev",
    "clear": "yarn workspaces foreach -pi run clear",
    "preclear": "rm -rf api public/build",
    "fix": "eslint --fix --ext tsx,ts ./web",
    "db:backup": "node ./scripts/db-backup.js",
    "db:restore": "FIRESTORE_EMULATOR_HOST=\"localhost:8080\" FIREBASE_STORAGE_EMULATOR_HOST=\"localhost:9199\" node ./scripts/db-restore.js",
    "emulator": "firebase emulators:start --import=./.firebase-emulator --export-on-exit"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@reach/menu-button": "^0.17.0",
    "@reach/popover": "^0.17.0",
    "@react-pdf/renderer": "^2.2.0",
    "@remix-run/node": "^1.6.3",
    "@remix-run/react": "^1.6.3",
    "@remix-run/server-runtime": "^1.6.3",
    "@remix-run/vercel": "^1.6.3",
    "clsx": "^1.1.1",
    "firebase-admin": "^11.0.0",
    "lru-cache": "^7.12.0",
    "markdown-to-jsx": "^7.1.7",
    "prism-react-renderer": "^1.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.2.2",
    "remix-auth-form": "^1.1.2",
    "remixicon-react": "^1.0.0",
    "tiny-invariant": "^1.2.0",
    "tslog": "^3.3.3"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@remix-run/dev": "^1.6.3",
    "@remix-run/eslint-config": "^1.6.3",
    "@remix-run/serve": "^1.6.3",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "@types/eslint": "^8.4.3",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.7.4"
  }
}
