{
  "name": "gs-monorepo",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "build": "run-s -l web:build:css web:build:remix",
    "start": "yarn remix-serve .",
    "cli:build": "yarn workspace guptasiddhant build",
    "cli:dev": "yarn workspace guptasiddhant dev",
    "cli:start": "yarn workspace guptasiddhant start",
    "functions:dev": "yarn workspace functions serve",
    "functions:deploy": "yarn workspace functions deploy",
    "web:build:css": "tailwindcss --minify -o ./web/features/styles/tailwind.generated.css",
    "web:build:remix": "remix build",
    "dev": "run-p web:dev:css web:dev:remix",
    "web:setup": "yarn workspaces focus gs-monorepo",
    "web:dev:css": "tailwindcss -w -o ./web/features/styles/tailwind.generated.css",
    "web:dev:remix": "remix dev",
    "web:dev:emulator": "run-p emulator web:dev:remix:emulator",
    "web:dev:remix:emulator": "bash ./scripts/emulator-dev.sh",
    "clear": "yarn workspaces foreach -pi run clear",
    "preclear": "rm -rf api public/build",
    "fix": "eslint --fix --ext tsx,ts ./web",
    "db:backup": "node ./scripts/db-backup.js",
    "db:restore": "FIRESTORE_EMULATOR_HOST=\"localhost:8080\" FIREBASE_STORAGE_EMULATOR_HOST=\"localhost:9199\" node ./scripts/db-restore.js",
    "emulator": "npx firebase emulators:start --import=./.firebase-emulator --export-on-exit",
    "test": "vitest run --dir web",
    "test:dev": "vitest dev --dir web",
    "test:coverage": "vitest run --dir web --coverage",
    "test:clear": "rm -rf ./coverage; rm node_modules/.vitest/results.json"
  },
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  }
}
