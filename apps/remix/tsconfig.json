{
  "include": ["remix.env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "paths": {
      "@gs/*": ["./src/features/*"],
      "~/*": ["./src/*"]
    },
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "strict": true,
    "target": "ES2019",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true
  }
}
