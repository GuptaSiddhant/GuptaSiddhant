{
  "name": "gs-remix",
  "private": true,
  "scripts": {
    "build": "remix build",
    "clear": "rm -rf api public/build node_modules/.cache/remix || true",
    "dev": "remix dev",
    "dev:emulator": "bash ./scripts/emulator-dev.sh",
    "format": "rome format src",
    "format:fix": "rome format --write src",
    "lint": "rome check src",
    "lint:fix": "rome check --apply src",
    "start": "yarn remix-serve .",
    "test": "vitest --dir src",
    "test:dev": "vitest dev --dir src",
    "test:coverage": "vitest --dir src --coverage",
    "test:clear": "rm -rf ./coverage; rm node_modules/.vitest/results.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@google-cloud/logging-min": "^10.3.1",
    "@reach/menu-button": "^0.18.0",
    "@reach/popover": "^0.18.0",
    "@react-pdf/renderer": "^2.3.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/vercel": "^1.15.0",
    "@upstash/redis": "^1.19.1",
    "clsx": "^1.2.1",
    "firebase": "^9.15.0",
    "firebase-admin": "^11.2.0",
    "graphiql": "2.2.0",
    "graphql": "^16.6.0",
    "lru-cache": "^7.14.1",
    "markdown-to-jsx": "^7.1.7",
    "prism-react-renderer": "^1.3.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-utils": "^6.1.0",
    "remixicon-react": "^1.0.0",
    "schema-dts": "^1.1.0",
    "znv": "0.3.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@remix-run/dev": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@total-typescript/ts-reset": "^0.3.7",
    "@types/eslint": "^8.4.10",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitest/coverage-istanbul": "^0.26.2",
    "cross-env": "^7.0.3",
    "jsdom": "^20.0.2",
    "npm-run-all": "^4.1.5",
    "remix-routes-folder": "^0.1.0",
    "rome": "^11.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.0",
    "vite": "^4.1.3",
    "vite-tsconfig-paths": "^4.0.0",
    "vitest": "^0.26.0"
  }
}
