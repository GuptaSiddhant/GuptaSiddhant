{
  "name": "website",
  "version": "0.0.0",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "prebuild": "tailwindcss -o ./app/styles/tailwind.css",
    "deploy": "deployctl deploy --prod --include=build,public --project=guptasiddhant ./build/index.js",
    "predeploy": "yarn build",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -w -o ./app/styles/tailwind.css",
    "dev:deno": "cross-env NODE_ENV=development deno run --unstable --watch --allow-net --allow-read --allow-env ./build/index.js",
    "dev:remix": "remix watch",
    "format": "deno fmt --ignore=node_modules,build,public/build",
    "lint": "deno lint --ignore=node_modules,build,public/build",
    "start": "cross-env NODE_ENV=production deno run --unstable --allow-net --allow-read --allow-env ./build/index.js"
  },
  "dependencies": {
    "@remix-run/deno": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/tailwindcss": "^2.2.4",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.0"
  },
  "engines": {
    "node": ">=14"
  }
}
